<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Theme applied while the app is launching (Splash screen) -->
    <style name="LaunchTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Show a splash background until Flutter UI loads -->
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <!-- Main app theme (used after Flutter starts) -->
    <style name="NormalTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Set background color -->
        <item name="android:windowBackground">?android:colorBackground</item>

        <!-- Use built-in Android colors to avoid missing resource errors -->
        <item name="colorPrimary">@android:color/holo_blue_light</item>
        <item name="colorPrimaryVariant">@android:color/holo_blue_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@android:color/holo_green_light</item>
        <item name="colorOnSecondary">@android:color/black</item>
    </style>

</resources>
